@section SideMenuHeader
{
    <h3>Home Page</h3>
    <p>This is text for home page side menu</p>
}
@section SideMenuBody
{
    @{
        IEnumerable<SubMenuItem> subMenu1 = new SubMenuItem[3] { new SubMenuItem("Menu Item 1", "#"), new SubMenuItem("Menu Item 2"), new SubMenuItem("Menu Item 3", "#") };
        IEnumerable<SubMenuItem> subMenu2 = new SubMenuItem[3] { new SubMenuItem("Menu Group"), new SubMenuItem("Menu Item 4","#", "fa-user-check"), new SubMenuItem("Menu Item 5", "#", "fa-user-circle") };

    }
    @Html.SideMenuLabel("Sub Menus")
    @Html.SideMenuSubMenu("Sub Menu 1", "SubMenuExample1", subMenu1, "fa-user")
    @Html.SideMenuSubMenu("Sub Menu 2", "SubMenuExample2", subMenu2)
    @Html.SideMenuLabel("Links")
    @Html.SideMenuLink("Link")
}
