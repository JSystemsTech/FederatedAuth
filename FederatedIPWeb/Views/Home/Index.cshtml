
<div class="row h-100">
    <div class="col-12 col-xl-4 mx-xl-auto my-auto">
        <div class="card drop-shadow-1">
            <div class="card-header">
                <div class="card-title">Federated Login</div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12 text-center">
                        <i class="fa fa-5x fa-user-circle"></i>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <p>Welcome to a sample Federated Authentication Web page. Please choose your authentication type below.</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-md-6 pb-1">
                        <a class="btn btn-info w-100" href="@(ViewBag.ExternalUrl)">External Authentication</a>
                    </div>
                    <div class="col-12 col-md-6 pb-1">
                        <a class="btn btn-primary w-100" href="@(ViewBag.FlexUrl)">Flex Authentication</a>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>

